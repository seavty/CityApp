@using CityApp.Utils.Helpers
@using CityApp.Models.DTO.Driver
@model CityApp.Models.DTO.GetListDTO<CityApp.Models.DTO.Driver.DriverViewDTO>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr class="text-center">
            <th scope="col" width="65px">#</th>
            <th scope="col"> <a href="#" id="sort_@nameof(DriverViewDTO.driverCode)" class="sort-data" onclick='javascript:sort("@nameof(DriverViewDTO.driverCode)", $(this))'> Driver ID </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(DriverViewDTO.driverName)" class="sort-data" onclick='javascript:sort("@nameof(DriverViewDTO.driverName)", $(this))'> Driver Name </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(DriverViewDTO.PhoneNumber)" class="sort-data" onclick='javascript:sort("@nameof(DriverViewDTO.PhoneNumber)")'> Phone Number </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(DriverViewDTO.email)" class="sort-data" onclick='javascript:sort("@nameof(DriverViewDTO.email)")'> E-mail </a>  </th>

        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            foreach (var item in Model.items)
            {
                <tr>
                    <th scope="row" class="text-center"> @(Model.metaData.startRow + i) </th>
                    <td class="align-middle"> <a href="@ConstantHelper.DRIVER_CONTROLLER/view/@item.id"> @item.driverCode </a> </td>
                    <td> @item.driverName </td>
                    <td> @item.PhoneNumber </td>
                    <td> @item.email </td>
                </tr>
                i++;
            }
        }

        @Html.Partial("~/Views/Shared/Pagination.cshtml", Model.metaData)


