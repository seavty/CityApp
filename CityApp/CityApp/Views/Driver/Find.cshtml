@using CityApp.Utils.Helpers
@using CityApp.Models.DTO.Driver
@model CityApp.Models.DTO.Driver.DriverFindDTO
@{
   Layout = "~/Views/Shared/Main/_Main.cshtml";
}

<form name="record" id="record">
    @Html.AntiForgeryToken()
    @Html.Partial("~/Views/Shared/Template/FindMode/Button.cshtml")

    <br />
    <div class="card shadow-sm">
        <div class="card-header merienda"> Find Driver </div>
        @Html.HiddenFor(m => m.orderBy, new { Value = nameof(DriverViewDTO.driverName) })
        @Html.HiddenFor(m => m.orderDirection, new { Value = ConstantHelper.ASC })
        <!-- card body -->
        <div class="card-body">
            <div class="row">

                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(m => m.driverCode)
                        @Html.TextBoxFor(m => m.driverCode, new { @class = "form-control", placeholder = "Driver ID", @maxlength = "100" })
                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(m => m.driverName)
                        @Html.TextBoxFor(m => m.driverName, new { @class = "form-control", placeholder = "Driver Name", @maxlength = "100" })
                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(m => m.phoneNumber)
                        @Html.TextBoxFor(m => m.phoneNumber, new { @class = "form-control", placeholder = "Phone Number", @maxlength = "100" })
                    </div>
                </div>

            </div>
        </div>
        <!--end  card body -->
    </div>

    <br />
    @Html.Partial("~/Views/Shared/Template/FindMode/TableData.cshtml")
    <br />

</form>

<script src="~/Content/js/function/template/findmode/button.js"></script>
<script>
    const controller = "@ConstantHelper.DRIVER_CONTROLLER";
</script>

