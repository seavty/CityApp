@using CityApp.Models.DTO.Customer
@model CityApp.Models.DTO.GetListDTO<CityApp.Models.DTO.Customer.CustomerViewDTO>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr class="text-center">
            <th scope="col" width="65px">#</th>
            <th scope="col"> <a href="#" id="sort_@nameof(CustomerViewDTO.customerCode)" class="sort-data" onclick='javascript:sort("@nameof(CustomerViewDTO.customerCode)", $(this))'> Customer ID </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(CustomerViewDTO.customerName)" class="sort-data" onclick='javascript:sort("@nameof(CustomerViewDTO.customerName)", $(this))'> Customer Name </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(CustomerViewDTO.PhoneNumber)" class="sort-data" onclick='javascript:sort("@nameof(CustomerViewDTO.PhoneNumber)")'> Phone Number </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(CustomerViewDTO.email)" class="sort-data" onclick='javascript:sort("@nameof(CustomerViewDTO.email)")'> E-mail </a>  </th>
            
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            foreach (var item in Model.items)
            {
                <tr>
                    <th scope="row" class="text-center"> @(Model.metaData.startRow + i) </th>
                    <td class="align-middle"> <a href=" @Url.Content("~/customer/view/")@item.id"> @item.customerCode </a> </td>
                    <td> @item.customerName </td>
                    <td> @item.PhoneNumber </td>
                    <td> @item.email </td>
                </tr>
                i++;
            }
        }

        @Html.Partial("~/Views/Shared/Pagination.cshtml", Model.metaData)

        
