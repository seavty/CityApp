@using CityApp.Utils.Helpers
@using CityApp.Models.DTO.Transaction
@model CityApp.Models.DTO.GetListDTO<CityApp.Models.DTO.Transaction.TransactionViewDTO>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr class="text-center">
            <th scope="col" width="65px">#</th>
            <th scope="col"> <a href="#" id="sort_@nameof(TransactionViewDTO.tran_Code)" class="sort-data" onclick='javascript:sort("@nameof(TransactionViewDTO.tran_Code)", $(this))'> Transaction ID </a> </th>
            <th scope="col"> <a href="#" id="sort_@nameof(TransactionViewDTO.customer.customerCode)" class="sort-data" onclick='javascript:sort("@nameof(TransactionViewDTO.customer.customerCode)", $(this))'> Customer ID </a> </th>
            <th scope="col"> <a href="#" id="sort_@nameof(TransactionViewDTO.customer.customerName)" class="sort-data" onclick='javascript:sort("@nameof(TransactionViewDTO.customer.customerName)", $(this))'> Customer Name </a> </th>
            <th scope="col"> <a href="#" id="sort_@nameof(TransactionViewDTO.driver.driverCode)" class="sort-data" onclick='javascript:sort("@nameof(TransactionViewDTO.driver.driverCode)", $(this))'> Driver ID </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(TransactionViewDTO.driver.driverName)" class="sort-data" onclick='javascript:sort("@nameof(TransactionViewDTO.driver.driverName)", $(this))'> Driver Name </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(TransactionViewDTO.driver.driverCode)" class="sort-data" onclick='javascript:sort("@nameof(TransactionViewDTO.vehicle.vehicleCode)", $(this))'> Vehicle ID </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(TransactionViewDTO.tran_StartAddress)" class="sort-data" onclick='javascript:sort("@nameof(TransactionViewDTO.tran_StartAddress)", $(this))'> Start Address </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(TransactionViewDTO.tran_EndAddress)" class="sort-data" onclick='javascript:sort("@nameof(TransactionViewDTO.tran_EndAddress)", $(this))'> End Address </a>  </th>


        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            foreach (var item in Model.items)
            {
        <tr>
            <th scope="row" class="text-center"> @(Model.metaData.startRow + i) </th>
            <td class="align-middle"> <a href="@ConstantHelper.TRANSACTION_CONTROLLER/view/@item.tran_TransactionID">  @item.tran_Code </a> </td>
            <td class="align-middle"> <a href="@ConstantHelper.CUSTOMER_CONTROLLER/view/@item.customer.id">  @item.customer.customerCode </a> </td>
            <td class="align-middle"> @item.customer.customerName </td>
            <td class="align-middle"> <a href="@ConstantHelper.DRIVER_CONTROLLER/view/@item.driver.id"> @item.driver.driverCode </a> </td>
            <td class="align-middle"> @item.driver.driverName </td>
            <td class="align-middle"> <a href="@ConstantHelper.VEHICLE_CONTROLLER/view/@item.vehicle.id"> @item.vehicle.vehicleCode </a> </td>
            <td class="align-middle"> @item.tran_StartAddress </td>
            <td class="align-middle"> @item.tran_EndAddress </td>

        </tr>
                i++;
            }
        }

        @Html.Partial("~/Views/Shared/Pagination.cshtml", Model.metaData)


