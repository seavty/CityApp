@using CityApp.Utils.Helpers
@using CityApp.Models.DTO.FavouriteDriver
@model CityApp.Models.DTO.GetListDTO<CityApp.Models.DTO.FavouriteDriver.FavouriteDriverViewDTO>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr class="text-center">
            <th scope="col" width="65px">#</th>
            <th scope="col"> <a href="#" id="sort_@nameof(FavouriteDriverViewDTO.customer.customerCode)" class="sort-data" onclick='javascript:sort("@nameof(FavouriteDriverViewDTO.customer.customerCode)", $(this))'> Customer ID </a> </th>
            <th scope="col"> <a href="#" id="sort_@nameof(FavouriteDriverViewDTO.customer.customerName)" class="sort-data" onclick='javascript:sort("@nameof(FavouriteDriverViewDTO.customer.customerName)", $(this))'> Customer Name </a> </th>
            <th scope="col"> <a href="#" id="sort_@nameof(FavouriteDriverViewDTO.driver.driverCode)" class="sort-data" onclick='javascript:sort("@nameof(FavouriteDriverViewDTO.driver.driverCode)", $(this))'> Driver ID </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(FavouriteDriverViewDTO.driver.driverName)" class="sort-data" onclick='javascript:sort("@nameof(FavouriteDriverViewDTO.driver.driverName)", $(this))'> Driver Name </a>  </th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            foreach (var item in Model.items)
            {
                <tr>
                    <th scope="row" class="text-center"> @(Model.metaData.startRow + i) </th>
                    <td class="align-middle"> <a href="@ConstantHelper.CUSTOMER_CONTROLLER/view/@item.customer.id"> @item.customer.customerCode </a> </td>
                    <td class="align-middle"> @item.customer.customerName </td>
                    <td class="align-middle"> <a href="@ConstantHelper.DRIVER_CONTROLLER/view/@item.driver.id"> @item.driver.driverCode </a> </td>
                    <td class="align-middle"> @item.driver.driverName </td>
                </tr>
                i++;
            }
        }

        @Html.Partial("~/Views/Shared/Pagination.cshtml", Model.metaData)


